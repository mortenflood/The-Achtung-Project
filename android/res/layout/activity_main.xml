<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBlack"
    tools:context="com.example.malte.achtung.Game">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_existing_user"
        android:layout_centerHorizontal="true"
        android:text="@string/existingUserButton"
        android:textSize="@dimen/menu_button_text_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_new_user"
        android:layout_below="@id/button_existing_user"
        android:layout_centerHorizontal="true"
        android:text="@string/newUserButton"
        android:textSize="@dimen/menu_button_text_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_guest_user"
        android:layout_below="@id/button_new_user"
        android:layout_centerHorizontal="true"
        android:text="@string/guestUserButton"
        android:textSize="@dimen/menu_button_text_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete"
        android:layout_below="@id/button_guest_user"
        android:layout_centerHorizontal="true"
        android:text="@string/deleteButton"
        android:textSize="@dimen/menu_button_text_size"/>




</RelativeLayout>
